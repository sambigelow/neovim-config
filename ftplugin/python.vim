set tabstop=4                   " make tab out of 4 spaces
set softtabstop=4
set textwidth=80                " Max line length
set autoindent                  " indent automagically
set expandtab                   " make tab into spaces
set shiftwidth=4                " use 4 spaces for << and >>
set showmatch                   " highlight matching pair of braces
set fileformat=unix
let python_highlight_all = 1    " enable all Python syntax highlighting

